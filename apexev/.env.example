# ==========================================
# APEXEV ENVIRONMENT VARIABLES TEMPLATE
# ==========================================
# Copy file này thành .env và điền giá trị thực tế
# File .env sẽ không được commit lên Git (đã thêm vào .gitignore)

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DB_URL=jdbc:mysql://localhost:3306/apexev?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
DB_USERNAME=root
DB_PASSWORD=your_database_password_here

# ==========================================
# JWT CONFIGURATION
# ==========================================
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRATION_MS=86400000
JWT_REFRESH_EXPIRATION_MS=604800000

# ==========================================
# MAIL CONFIGURATION
# ==========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password_here
MAIL_FROM=your_email@gmail.com

# ==========================================
# SERVER CONFIGURATION
# ==========================================
SERVER_PORT=8081
API_SERVER_URL=http://localhost:8081
API_SERVER_NAME=Local Development Server

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL_SECURITY=INFO

# ==========================================
# JPA/HIBERNATE
# ==========================================
DDL_AUTO=update
SHOW_SQL=true

# ==========================================
# FILE UPLOAD
# ==========================================
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# ==========================================
# OPENAPI/SWAGGER
# ==========================================
API_TITLE=ApexEV API
API_VERSION=1.0.0
API_DESCRIPTION=ApexEV Garage Management System API
